  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: 'mailto:ceo@h2-workforce.com',
        target: '_blank',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title"> H2WorkForce&nbsp;+&nbsp;Your Binational Partner </Fragment>

    <Fragment slot="subtitle">
      Are you ready to get started? <br class="hidden md:inline" />Contact us and find the best workers for your
